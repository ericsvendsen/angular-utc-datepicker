{
  "name": "angular-utc-datepicker",
  "version": "1.0.0",
  "description": "A simple Angular 4 datepicker component that exclusively uses UTC",
  "keywords": [
    "angular 4",
    "datepicker",
    "utc"
  ],
  "main": "index.js",
  "scripts": {
    "clean": "rimraf .tmp && rimraf dist",
    "transpile": "ngc",
    "package": "rollup -c",
    "minify": "./node_modules/uglify-js/bin/uglifyjs dist/bundles/utc-datepicker.umd.js --screw-ie8 --compress --mangle --comments --output dist/bundles/utc-datepicker.umd.min.js",
    "copy": "cpx './package-dist.json' dist && renamer --find 'package-dist.json' --replace 'package.json' ./dist/*",
    "build": "npm run clean && npm run transpile && npm run package && npm run minify && npm run copy"
  },
  "license": "MIT",
  "homepage": "https://github.com/ericsvendsen/angular-utc-datepicker",
  "bugs": {
    "url": "https://github.com/ericsvendsen/angular-utc-datepicker/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ericsvendsen/angular-utc-datepicker.git"
  },
  "devDependencies": {
    "@angular/compiler": "^4.0.0",
    "@angular/compiler-cli": "^4.0.0",
    "cpx": "^1.5.0",
    "renamer": "^0.6.1",
    "rimraf": "^2.6.1",
    "rollup": "^0.49.2",
    "typescript": "~2.3.3",
    "uglify-js": "^3.0.28"
  },
  "dependencies": {
    "@angular/common": "^4.0.0",
    "@angular/core": "^4.0.0",
    "@angular/forms": "^4.3.6",
    "@angular/platform-browser": "^4.3.6",
    "font-awesome": "^4.7.0",
    "moment": "^2.18.1",
    "rxjs": "^5.4.3",
    "zone.js": "^0.8.4"
  }
}
